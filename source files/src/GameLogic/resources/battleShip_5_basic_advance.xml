<?xml version="1.0"?>
<BattleShipGame xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="BattleShipGame.xsd">
    <GameType>ADVANCE</GameType>
    <boardSize>10</boardSize>
    <shipTypes>
        <shipType id="shipTypeA">
            <category>L_SHAPE</category>
            <amount>2</amount>
            <length>3</length>
            <score>10</score>
        </shipType>
        <shipType id="shipTypeB">
            <category>REGULAR</category>
            <amount>2</amount>
            <length>2</length>
            <score>5</score>
        </shipType>
    </shipTypes>
    <mine>
        <amount>1</amount>
    </mine>
    <boards>
        <board>
            <ship>
                <shipTypeId>shipTypeA</shipTypeId>
                <position x="2" y="2" />
                <direction>UP_RIGHT</direction>
            </ship>
			<ship>
                <shipTypeId>shipTypeA</shipTypeId>
                <position x="8" y="8" />
                <direction>DOWN_RIGHT</direction>
            </ship>
            <ship>
                <shipTypeId>shipTypeB</shipTypeId>
                <position x="4" y="4" />
                <direction>COLUMN</direction>
            </ship>
			<ship>
                <shipTypeId>shipTypeB</shipTypeId>
                <position x="6" y="6" />
                <direction>COLUMN</direction>
            </ship>
        </board>
        <board>
            <ship>
                <shipTypeId>shipTypeA</shipTypeId>
                <position x="1" y="1" />
                <direction>UP_RIGHT</direction>
            </ship>
			<ship>
                <shipTypeId>shipTypeA</shipTypeId>
                <position x="10" y="10" />
                <direction>RIGHT_UP</direction>
            </ship>
			<ship>
                <shipTypeId>shipTypeB</shipTypeId>
                <position x="6" y="6" />
                <direction>COLUMN</direction>
            </ship>
            <ship>
                <shipTypeId>shipTypeB</shipTypeId>
                <position x="4" y="4" />
                <direction>COLUMN</direction>
            </ship>
        </board>
    </boards>
</BattleShipGame>
